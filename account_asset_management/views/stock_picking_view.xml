<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
        <record id="stock_picking_inherit_view" model="ir.ui.view">
            <field name="name">stock.picking.view.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='origin']" position="after">
                    <button name="action_compute_stock_move_products" type="object"
                        class="fa fa-refresh btn-secondary"
                        style="font-size: 14px; border-radius: 5px; margin-top: 12px; margin-left: 10px;" string="  Compute Products"
                        attrs="{'invisible': ['|', '|', '|', ('create_from_move', '=', False), ('location_id', '=', False), ('location_dest_id', '=', False), ('picking_type_id', '=', False)]}" />
                </xpath>

                <xpath expr="//form" position="inside">
                    <field name="create_from_move" invisible="1" />
                </xpath>

                <xpath
                    expr="//notebook//page[@name='operations']//field[@name='move_ids_without_package']"
                    position="attributes">
                    <attribute name="attrs">{'readonly': [('create_from_move', '=', True)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>


</odoo>